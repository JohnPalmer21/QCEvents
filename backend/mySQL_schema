create DATABASE event_manager;

use event_manager;

create table users(
	id INT AUTO_INCREMENT PRIMARY KEY,
	username VARCHAR(50) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,
    email VARCHAR(100),
    phone_num INT(10) UNIQUE NOT NULL
);

use event_manager;

CREATE TABLE events (
    id INT AUTO_INCREMENT PRIMARY KEY,
    title VARCHAR(100),
    date VARCHAR(50),
    time VARCHAR(50),
    location VARCHAR(255),
    description TEXT
);
